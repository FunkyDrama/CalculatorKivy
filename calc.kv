BoxLayout:
    orientation: 'vertical'
    padding: "10dp"


    MDTextField:
        id: input_field
        input_filter: 'int'
        hint_text: "Введите число: "
        readonly: True
        font_size: '24sp'
        size_hint: 1, 0.4
        multiline: False
        hint_text_color: (0.1176470588, 0.1176470588, 0.1176470588, 1)
        color_active: (0, 0, 0, 1)
        line_color_normal: (0, 0, 0, 0.7)

    MDGridLayout:
        cols: 4
        spacing: "10dp"
        padding: "10dp"



        MDFillRoundFlatButton:
            text: 'C'
            on_release: app.clear_input()
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.85490196078, 0.20392156862, 0.22352941176, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '<'
            on_release: app.backspace()
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.42352941176, 0.43137254902, 0.44705882352, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '/'
            on_release: app.update_input('/')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.42352941176, 0.43137254902, 0.44705882352, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: 'x'
            on_release: app.update_input('*')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.42352941176, 0.43137254902, 0.44705882352, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '7'
            on_release: app.update_input('7')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.14509803921, 0.15294117647, 0.16862745098, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '8'
            on_release: app.update_input('8')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.14509803921, 0.15294117647, 0.16862745098, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '9'
            on_release: app.update_input('9')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.14509803921, 0.15294117647, 0.16862745098, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '-'
            on_release: app.update_input('-')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.42352941176, 0.43137254902, 0.44705882352, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '4'
            on_release: app.update_input('4')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.14509803921, 0.15294117647, 0.16862745098, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '5'
            on_release: app.update_input('5')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.14509803921, 0.15294117647, 0.16862745098, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '6'
            on_release: app.update_input('6')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.14509803921, 0.15294117647, 0.16862745098, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '+'
            on_release: app.update_input('+')
            text_color: (1, 1, 1, 1)
            md_bg_color: (0.42352941176, 0.43137254902, 0.44705882352, 1)
            size_hint: 1, 0.8

        MDFillRoundFlatButton:
            text: '1'
            on_release: app.update_input('1')
            text_color: (1, 1, 1, 1)
